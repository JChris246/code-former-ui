root = true

[*]
end_of_line = lf

[{*js,*json,*css,*jsx,*cjs,*html}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[{package.json,package-lock.json,yarn.lock}]
max_line_length = off
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false